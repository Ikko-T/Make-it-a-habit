<!DOCTYPE html>
<html>
  <head>
    <title>Make It A Habit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
          <%= link_to("Make It A Habit", "/top") %>
      </div>
      <ul class="header-menus">
          <li>
              <%= link_to("Make It A Habitとは", "/about") %>
          </li>
          <li>
              <%= link_to("習慣化一覧", "/posts/index") %>
          </li>
          <li>
              <%= link_to("新規作成", "/posts/new") %>
          </li>
      </ul>
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
